<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elias.wordbook.weekStat"
    tools:showIn="@layout/activity_week_stat"
    android:orientation="vertical">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:id="@+id/graph" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You Have Learned "
            android:layout_weight="3"
            android:padding="2dp"
            android:id="@+id/have"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/showcnt"
            android:padding="5dp"
            android:text="0"
            android:layout_alignParentTop="true"

            android:textColor="#000"
            android:background="#cdf"
            android:autoText="true"
            android:textAlignment="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="WORDS LAST WEEK"
            android:id="@+id/wrds"
            android:layout_marginLeft="5dp"
            android:textAlignment="center"
            android:padding="5dp"
            android:textSize="13sp"
            android:textColor="#000" />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="d1"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/first"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d1"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="d2"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d1"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d2"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="d3"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d2"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d3"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="d4"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d3"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d4"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="d5"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d4"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d5"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="sat                                         34"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d5"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d6"
        android:layout_marginBottom="7dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="sat                                          34"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/d6"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/d7"
        android:layout_marginBottom="2dp"

        />
    </LinearLayout>
    </ScrollView>

</LinearLayout>
