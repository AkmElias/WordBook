<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elias.wordbook"
    android:versionCode="2"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.elias.wordbook.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.elias.wordbook.ItemShow"
            android:label="@string/title_activity_item_show"
            android:theme="@style/CustomTheme" />
        <activity
            android:name="com.elias.wordbook.BookmarkWords"
            android:label="@string/title_activity_bookmark_words"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.weekStat"
            android:label="@string/title_activity_week_stat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.MonthlyStat"
            android:label="@string/title_activity_monthly_stat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.LearnedWords"
            android:label="@string/title_activity_learned_words"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.ResultStatActivity"
            android:label="@string/title_activity_result_stat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.elias.wordbook.Abc"
            android:label="@string/title_activity_abc"
            android:theme="@style/CustomTheme" />
    </application>

</manifest>