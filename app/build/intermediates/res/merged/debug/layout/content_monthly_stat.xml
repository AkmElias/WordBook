<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elias.wordbook.MonthlyStat"
    tools:showIn="@layout/activity_monthly_stat"
    android:orientation="vertical">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="150dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/first"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="You Have Learned "
            android:layout_weight="3"
            android:textAlignment="center"
            android:padding="2dp"
            android:id="@+id/have"

            android:textSize="15sp"
            android:textColor="#000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/showcnt"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="0"
            android:layout_alignParentTop="true"

            android:textColor="#000"
            android:background="#cdf"
            android:autoText="true"
            android:textAlignment="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WORDS LAST WEEK"
            android:layout_weight="3"
            android:id="@+id/wrds"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textColor="#000" />


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="week1"
        android:textSize="18sp"
        android:background="#0091EA"

        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/w1"
        android:layout_marginBottom="15dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="week2"
        android:textSize="18sp"
        android:background="#0091EA"

        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/w2"
        android:layout_marginBottom="15dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="week3"
        android:textSize="18sp"
        android:background="#0091EA"

        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/w3"
        android:layout_marginBottom="15dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="week4"
        android:textSize="18sp"
        android:background="#0091EA"
        android:layout_below="@+id/w3"
        android:textColor="#fff"
        android:padding="5dp"
        android:id="@+id/w4"
        android:layout_marginBottom="15dp"

        />
      </LinearLayout>
    </ScrollView>

</LinearLayout>
