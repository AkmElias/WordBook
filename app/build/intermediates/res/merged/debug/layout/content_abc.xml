<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elias.wordbook.Abc">


    <TextView
        android:id="@+id/englisw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:text="English"
        android:textColor="#fff"
        android:textIsSelectable="true"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/banglaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/englisw"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Bangla"
        android:textColor="#fff"
        android:textSize="25sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/banglaw"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:background="#202020"
        android:padding="5dp">

        <ImageView
            android:id="@+id/add"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:onClick="OnBtnClick"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/check"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:onClick="OnBtnClick"
            android:src="@drawable/ic_bookmarked"/>

        <ImageView
            android:id="@+id/itpr"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:onClick="OnBtnClick"
            android:padding="0dp"
            android:src="@drawable/ic_volume_white" />


    </RelativeLayout>

</RelativeLayout>


